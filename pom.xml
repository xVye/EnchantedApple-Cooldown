<project>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>
    
    <groupId>net.pixxie</groupId>
    <artifactId>EnchantedAppleCooldown</artifactId>
    <version>4.0.0-SNAPSHOT</version>
    
    <name>Enchanted Apple Cooldown</name>
    <description>A plugin that allows you to slow down enchanted golden apple usage.</description>
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <spigot.version>1.8-R0.1-SNAPSHOT</spigot.version>
        
        <bukkit.plugin.name>EnchantedAppleCooldown</bukkit.plugin.name>
        <bukkit.plugin.prefix>Enchanted Apple Cooldown</bukkit.plugin.prefix>
        <bukkit.plugin.description>${project.description}</bukkit.plugin.description>
        
        <bukkit.plugin.main>net.pixxie.enchantedapple.cooldown.EnchantedAppleCooldown</bukkit.plugin.main>
        <bukkit.plugin.version>4.0.0</bukkit.plugin.version>
    </properties>
    
    <repositories>
        <!-- SpigotMC Repository -->
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
        
        <!-- CodeMC Public Repository -->
        <repository>
            <id>codemc-repo</id>
            <url>https://repo.codemc.io/repository/maven-public/</url>
        </repository>
        
        <!-- PlaceholderAPI Repository -->
        <repository>
            <id>placeholderapi</id>
            <url>http://repo.extendedclip.com/content/repositories/placeholderapi/</url>
        </repository>
        
        <!-- MVdW Repository -->
        <repository>
            <id>mvdw-software</id>
            <url>http://repo.mvdw-software.com/content/groups/public/</url>
        </repository>
    </repositories>
    
    <dependencies>
        <!-- Spigot API -->
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- SirBlobman API -->
        <dependency>
            <groupId>com.SirBlobman.api</groupId>
            <artifactId>SirBlobmanAPI</artifactId>
            <version>1.10-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        
        <!-- PlaceholderAPI -->
        <dependency>
            <groupId>me.clip</groupId>
            <artifactId>placeholderapi</artifactId>
            <version>2.10.4</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- MVdWPlaceholderAPI -->
        <dependency>
            <groupId>be.maximvdw</groupId>
            <artifactId>MVdWPlaceholderAPI</artifactId>
            <version>3.0.1-SNAPSHOT</version>
            <scope>provided</scope>
            
            <exclusions>
                <!-- Exclude Spigot NMS -->
                <exclusion>
                    <groupId>org.spigotmc</groupId>
                    <artifactId>spigot</artifactId>
                </exclusion>

                <!-- Exclude MVdWUpdater -->
                <exclusion>
                    <groupId>be.maximvdw</groupId>
                    <artifactId>MVdWUpdater</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>
    
    <build>
        <finalName>${bukkit.plugin.name}-${bukkit.plugin.version}</finalName>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.1</version>
                
                <configuration>
                    <relocations>
                        <relocation>
                            <pattern>com.SirBlobman.api</pattern>
                            <shadedPattern>com.SirBlobman.enderpearl.cooldown.api.shaded</shadedPattern>
                        </relocation>
                    </relocations>
                </configuration>
                
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
    <distributionManagement>
        <!-- CodeMC Releases Repository -->
        <repository>
            <id>codemc-releases</id>
            <url>https://repo.codemc.io/repository/maven-releases/</url>
        </repository>
        
        <!-- CodeMC Snapshots Repository -->
        <snapshotRepository>
            <id>codemc-snapshots</id>
            <url>https://repo.codemc.io/repository/maven-snapshots/</url>
        </snapshotRepository>
    </distributionManagement>
</project>